<Window x:Class="Yonetim.Yardim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yonetim"
        mc:Ignorable="d"
        Height="593" Width="1106"
        ResizeMode="NoResize"
        Icon="Resources/HecemYonetim.png"
	ShowInTaskbar="False"
	WindowStartupLocation="CenterScreen"
	Foreground="Blue">
    <Grid>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="75*" />
            </Grid.ColumnDefinitions>

            <TreeView Name="tree" FontSize="10pt" 
					  SelectedItemChanged="HelponselectedItemChanged"
					  >
                <TreeViewItem Header="Hecem Kullanımı" 
						  Tag="HecemKullanim.mht" 
						  />
                <TreeViewItem Header="Öğrenci Paneli Yönetimi" 
						  Tag="Yonetim.mht" />

                <TreeViewItem Header="Veri Yedekleme" 
						  Tag="Veri.mht" />
             
            </TreeView>

            <GridSplitter Grid.Column="1" Width="6" 
						  HorizontalAlignment="Center" 
						  VerticalAlignment="Stretch" />

            <WebBrowser Name="frame" Grid.Column="2" />
        </Grid>
    </Grid>
</Window>
